 Sub log_simpan() 'untuk menyimpan log aktifitas
        'on error resume next
        Try
            Call koneksi()
            Dim simpanlog As String = "insert into log_aktivitas values ('""', '" & menu_utama.Panel1.Text & "','User Simpan','" & Format(DateValue(Today), "yyyy-MM-dd") & "','" & menu_utama.lbljam.Text & "')"
            Console.WriteLine(simpanlog)
            cmd = New OdbcCommand(simpanlog, conn)
            cmd.ExecuteNonQuery()
        Catch ex As Exception
            MsgBox(ex.Message)
        End Try
    End Sub
